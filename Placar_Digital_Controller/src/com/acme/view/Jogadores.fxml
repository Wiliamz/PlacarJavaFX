<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane id="AnchorPane" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.acme.controller.JogadoresController">
   <children>
      <GridPane prefHeight="200.0" prefWidth="400.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="206.0" minWidth="10.0" prefWidth="193.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="128.0" minWidth="10.0" prefWidth="73.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <JFXButton fx:id="jfxbtnAddJogador" onAction="#handlejfxbtnAddJogadorAction" prefHeight="100.0" prefWidth="100.0" text="Adicionar" GridPane.columnIndex="2" />
            <JFXButton fx:id="jfxbtnCancel" onAction="#handlejfxbtnCancelAction" prefHeight="100.0" prefWidth="100.0" text="Cancelar" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <JFXComboBox fx:id="jfxcbTimes" onMouseEntered="#handlejfxcbTimesAction" prefHeight="30.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <JFXTextField fx:id="jfxtfJogador" promptText="Digite aqui o nome do jogador" GridPane.columnIndex="1" />
            <Label alignment="CENTER" prefHeight="100.0" prefWidth="100.0" text="Nome" />
            <Label alignment="CENTER" prefHeight="100.0" prefWidth="100.0" text="Time" textAlignment="CENTER" GridPane.rowIndex="1" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
